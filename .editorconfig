# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Configuration par défaut pour tous les fichiers
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Configuration spécifique pour les fichiers Java
[*.java]
indent_size = 4
max_line_length = 120

# Configuration pour les fichiers de configuration
[*.{yml,yaml}]
indent_size = 2

[*.{json,js,ts}]
indent_size = 2

# Configuration pour les fichiers Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Configuration pour les fichiers de build Maven
[pom.xml]
indent_size = 2

# Configuration pour les fichiers de propriétés
[*.properties]
indent_size = 4
